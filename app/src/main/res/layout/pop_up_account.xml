<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvPopUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editing Information: "
        android:textSize="35dp" />

    <TextView
        android:id="@+id/tvSpinnerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select a field to edit:"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spnUserInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/user_info_array" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/etText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="text"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvSpnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Level"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spnActivityLevel"
        android:layout_width="460dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:entries="@array/activityLevel_array"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Update" />

</LinearLayout>